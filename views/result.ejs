<!DOCTYPE html>
<html>
  <head>
    <title>Resultado de pago</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <% include partials/_header %>
  </head>
  <% include partials/_navbar %>
  <section class="container" >
    <div class="row">
      <div class="col-md-3"></div>
      <div class="center-column col-md-6">
        <section class="result-form">
          <h2>Resultado de pago:</h2>
          <hr>
          <p><strong>Estado:</strong> <%= answer.orderStatus %></p>
          <p><strong>Monto:</strong> <%= orderDetails.orderCurrency %>. <%= (orderDetails.orderTotalAmount / 100).toFixed(2) %></p>
          <p><strong>Order-id:</strong> <%= orderDetails.orderId %></p>
          <hr>
          <details open>
            <summary><h2>Respuesta recibida del servidor:</h2></summary>
            <pre><%= JSON.stringify(respuesta, null, 2) %></pre>
          </details>
          <hr>
          <details>
            <summary><h2>kr-answer:</h2></summary>
            <pre><%= JSON.stringify(answer, null, 2) %></pre>
          </details>
          <hr>
          <form action="/" method="get">
            <button class="btn btn-primary">Volver a probar</button>
          </form>
        </section>
      </div>
      <div class="col-md-3"></div>
    </div>
  </section>
  <% include partials/_footer %>
</html>
